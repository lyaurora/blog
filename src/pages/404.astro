---
import MainLayout from "../layouts/MainGridLayout.astro";
import { siteConfig } from "../config";
---

<MainLayout title="404 Not Found">
    <div class="flex flex-col items-center justify-center min-h-[70vh] text-center relative">
        <!-- 背景大字 -->
        <div class="text-[12rem] font-bold text-black/5 dark:text-white/5 leading-none select-none">404</div>
        
        <!-- 前景内容 -->
        <div class="absolute flex flex-col items-center gap-4">
            <h1 class="text-4xl font-bold text-black dark:text-white/80">页面未找到</h1>
            <p class="text-lg text-black/50 dark:text-white/75">
                你似乎来到了没有知识存在的荒原。
            </p>
            <a href="/" class="px-6 py-3 rounded-xl bg-[var(--primary)] text-white hover:opacity-80 transition-opacity">
                回到首页
            </a>
        </div>
    </div>
</MainLayout>
